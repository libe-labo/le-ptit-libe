div.menu--wrapper(ng-controller="MenuController")
    div.row.release-title.color-fg
        div
            p N°{{ getReleaseN() }}
        div
            p.release-title__title(ng-bind-html="getTitle()")
    div.row.centered.menu
        div.row
            div.menu__item.col-xs-4.col-xs-offset-4.col-md-2.col-md-offset-5.centered
                vignette(image-src="getVignetteImage(0)", article-id="0")
                a(ng-bind-html="getTitle(0)", ui-sref="article({ release : getReleaseN() , article : 0 })", ui-sref-opts="{reload:true}")
        div.row
            div.menu__item.col-xs-4.col-md-2(ng-repeat='idx in getVignetteRepetition(row)',
                                    ng-class='getVignetteClass(idx)')
                vignette(image-src="getVignetteImage(idx)", article-id="idx")
                a(ng-bind-html="getTitle(idx)", ui-sref="article({ release : getReleaseN() , article : idx })", ui-sref-opts="{reload:true}")
    div.row
        p.centered(style="margin-top:10em;")
            | Tu veux des nouvelles
            br
            | du P'tit Libé&nbsp;?
        p.centered
            a.mail(href="", target="_blank")
                img(src="assets/images/mail.svg")
                br
                | inscris-toi
