.row.article(ng-style="getCartelStyle()")
    div
        p.article__title.color-fg
            vignette(image-src="getVignetteImage()")
            span(ng-bind-html="getArticleTitle()")
        p
        div.article__content(data-editable, data-name="content", ng-include="'app/releases/' + getCurrentRelease() + '/' + getCurrentArticle() + '.html'")
.row(ng-style="getCartelStyle()")
    div(ng-include="'app/components/menu/menu.html'")
